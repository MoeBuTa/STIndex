# LLM Configuration
STINDEX_LLM_PROVIDER=local  # local, openai, or anthropic
STINDEX_MODEL_NAME=Qwen/Qwen3-8B
STINDEX_MODEL_PATH=  # Optional: explicit path to local model
STINDEX_DEVICE=auto  # auto, cuda, cpu
STINDEX_TEMPERATURE=0.0

# API Keys (if using openai/anthropic)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Geocoding Configuration
STINDEX_GEOCODER=nominatim  # nominatim, google, or bing
STINDEX_USER_AGENT=stindex_app_v0.1.0
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Cache Configuration
STINDEX_CACHE_DIR=.cache
STINDEX_ENABLE_CACHE=true

# Rate Limiting
STINDEX_RATE_LIMIT_CALLS=1
STINDEX_RATE_LIMIT_PERIOD=1.0  # seconds

# Logging
STINDEX_LOG_LEVEL=INFO
STINDEX_LOG_FILE=stindex.log
